{% extends "SWUserBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Mon compte{% endblock %}

{% block spread_user_content %}

  <h1 class="title">Mon compte</h1>

  <div class="col-sm-6">
    <div class="col-md-12">
      <div class="artist-info">
        <div class="artist-heading">
          <h3 class="artist-title">Ma carte d'identit√© <a href="{{path('sw_user_account_edit')}}" class="pull-right"><i class="fa fa-pencil"></i> Editer</a></h3>
        </div>
        <div class="artist-body">
          <div class="col-sm-8">
            <div class="info-user">
            <div class="col-xs-2">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
            </div>
            <div class="col-xs-10">
              {{app.user.lastname}} {{app.user.firstname}}
            </div>
               
            </div>
             <div class="info-user">
               <div class="col-xs-2">
                 <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
               </div>
               <div class="col-xs-10">
                 {{app.user.address}} <br>
                 {{app.user.postalcode}} - {{app.user.city}} <br>
                 <img src="{{ asset('img/countries/'~app.user.country.alpha2|lower) }}.png" alt="{{app.user.country.nomFrFr}}"> {{app.user.country.nomFrFr}}
               </div>                                        
             </div>
             <div class="info-user">
               <div class="col-xs-2">
                 <span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span>
               </div>
               <div class="col-xs-10">
                 {{app.user.telephone}} 
               </div>                                       
             </div>
             <div class="info-user">
               <div class="col-xs-2">
                 <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
               </div>
               <div class="col-xs-10">
                 {{app.user.email}} 
               </div>                                       
             </div>
             <div class="info-user">
               <div class="col-xs-2">
                 <i class="fa fa-birthday-cake"></i>
               </div>
               <div class="col-xs-10">
                 {{app.user.getAge}} ans 
               </div>                                       
             </div>
          </div>
          <div class="col-sm-4">
            {% if app.user.getMedia() is not empty %}
            <div class="user-img">
              <img src="{{ asset(app.user.media.path) }}" alt="{{app.user.media.name}}">
            </div>   
            {% endif %}
          </div>
          
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6"></div>

{% endblock spread_user_content %}

{% block javascripts %}
    
{% endblock %}