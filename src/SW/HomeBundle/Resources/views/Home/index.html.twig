{% extends "::base.html.twig" %}

{% block body %}
<div class="container">
    <div class="row">
        {% block spread_user_content %}
        {% endblock spread_user_content %}
        <div class="col-md-3 home-left">
        	<div class="col-md-12 block-left">
                <h2>Recherche Artiste</h2>
            </div>
            <div class="col-md-12 block-left">
                <h2>Top Vente</h2>
            </div>
            <div class="col-md-12 block-left">
                {{ include('SWUserBundle:includes:top-artiste.html.twig') }}
            </div>
            <div class="col-md-12 block-left">
                <h2>Coup de coeur</h2>
            </div>
        </div>
        <div class="col-md-9">
        	<div class="slider">
                {{ render(controller('SWSliderBundle:Slider:index')) }}
        	</div>
        	<div class="col-md-4 alpha">
                <div class="block-annonceur">
                    <h2>Annonceur mis en avant</h2>  
                </div>
            </div>
        	<div class="col-md-4 ">
                <div class="block-annonceur">
                    <h2>Annonceur mis en avant</h2>  
                </div>
            </div>
        	<div class="col-md-4 omega">
                <div class="block-annonceur">
                    <h2>Annonceur mis en avant</h2>  
                </div>
            </div>
        </div>
    </div>
</div>


{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('plugins/layerslider/js/greensock.js') }}" type="text/javascript"></script>
<script src="{{ asset('plugins/layerslider/js/layerslider.transitions.js') }}" type="text/javascript"></script>
<script src="{{ asset('plugins/layerslider/js/layerslider.kreaturamedia.jquery.js') }}" type="text/javascript"></script>
<script type="text/javascript">
    /* layerslider */

    $(document).ready(function(){
        // Calling LayerSlider on the target element
        $('#layerslider').layerSlider({
            
            skinsPath: '{{ asset("plugins/layerslider/skins/") }}',
            showCircleTimer: false,
            thumbnailNavigation: 'disabled',
            navButtons: false,
            navStartStop: false,
            hoverPrevNext: false
        });
    });
 
</script>
{% endblock %}