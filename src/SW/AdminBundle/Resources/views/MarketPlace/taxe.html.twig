{% extends "SWAdminBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Les règles de taxe{% endblock %}

{% block spread_admin_content %}

	<section class="content-header">
		<h1 class="title">Les règles de taxe</h1>
      	<ol class="breadcrumb">
        	<li><a href="#"><i class="fa fa-dashboard"></i> Tableau de bord</a></li>
        	<li class="active">Les règles de taxe</li>
      	</ol>
    </section>
	<section class="content">

		<div class="box">
                <div class="box-header">
                  <div class="col-md-12">
                    <a href="{{path('sw_admin_taxe_add')}}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une règle</a>
                  </div>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <div id="example1_wrapper" class="dataTables_wrapper form-inline" role="grid"><div class="row"><div class="col-xs-6"><div id="example1_length" class="dataTables_length"><label><select size="1" name="example1_length" aria-controls="example1"><option value="10" selected="selected">10</option><option value="25">25</option><option value="50">50</option><option value="100">100</option></select> résultats par page</label></div></div></div><table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                    <thead>
                      <tr role="row">
	                      <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">Id</th>
	                      <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Nom</th>
	                      <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">Détail</th>
	                      <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending">Taux (%)</th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending">Action</th>
                      </tr>
                    </thead>
                    
                    <tfoot>
                      <tr><th rowspan="1" colspan="1">Id</th><th rowspan="1" colspan="1">Nom</th><th rowspan="1" colspan="1">Détail</th><th rowspan="1" colspan="1">Taux</th><th rowspan="1" colspan="1">Action</th></tr>
                    </tfoot>
                  <tbody role="alert" aria-live="polite" aria-relevant="all">
                    {% for taxe in taxes %}
                  	  <tr>
                        <td class=" sorting_1">{{ taxe.id }}</td>
                        <td class=" ">{{ taxe.name }}</td>
                        <td class=" ">{{ taxe.detail }}</td>
                        <td class=" ">{{ taxe.taux }}</td>
                        <td><div class="btn-group">
                          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            Action <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                            <li><a href="{{ path('sw_admin_taxe_edit', { 'id' : taxe.id }) }}">Editer</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('sw_admin_taxe_delete', { 'id' : taxe.id }) }}">Supprimer</a></li>
                          </ul>
                        </div></td>
                      </tr>
					{% endfor %}
                    </tbody>
                    </table>
                    </div>
                </div><!-- /.box-body -->
              </div>
		
	</section>
{% endblock spread_admin_content %}
{% block javascripts %}
	{% javascripts 'plugins/datatables/jquery.dataTables.js''plugins/datatables/dataTables.bootstrap.js''plugins/slimScroll/jquery.slimscroll.min.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
{% endblock %}