{% extends "SWAdminBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Toutes les activités{% endblock %}

{% block spread_admin_content %}

	<section class="content-header">
		<h1 class="title">Liste de toutes les activités</h1>
      	<ol class="breadcrumb">
        	<li><a href="{{path('sw_admin_dashboard')}}"><i class="fa fa-dashboard"></i> Tableau de bord</a></li>
        	<li class="active">Toutes les activités</li>
      	</ol>
    </section>
	<section class="content">
	
		<div class="box">
                <div class="box-header">
                  <h3 class="box-title"></h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <div id="example1_wrapper" class="dataTables_wrapper form-inline" role="grid">
                  <div class="col-md-12">
                  	<a href="{{path('sw_admin_activity_add')}}" class="btn btn-success"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter une activité</a>
                    <a href="{{path('sw_user_artist_register')}}" target="blank" class="btn btn-danger text-right pull-right"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Test </a>
                  </div>
                  <div class="clearfix"></div>
                  <br>
                  <table id="example1" class="table table-bordered table-striped dataTable" aria-describedby="example1_info">
                    <thead>
                      <tr role="row">
	                      <th class="sorting_asc" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending">
	                      Id
	                      </th>
                        <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Nom</th>
	                      <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending">Catégorie parente</th>
	                      <th class="sorting" role="columnheader" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending">
	                      	Détails
	                      </th>
	                      <th style="width:130px">
	                      	Action
	                      </th>
                      </tr>
                    </thead>
                  <tbody role="alert" aria-live="polite" aria-relevant="all">
                    {% for activity in activities %}
                  	  <tr>
                        <td class=" sorting_1">{{ activity.id }}</td>
                        <td class=" ">{{ activity.name }}</td>
                        <td class=" ">{{ activity.category.name }}</td>
                        <td class=" ">{{ activity.detail }}</td>
                        <td>
                        <div class="btn-group">
                          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                            Action <span class="caret"></span>
                          </button>
                          <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Voir</a></li>
                            <li><a href="{{ path('sw_admin_activity_edit', { 'id' : activity.id }) }}">Editer</a></li>
                            <li class="divider"></li>
                            <li><a href="{{ path('sw_admin_activity_delete', { 'id' : activity.id }) }}">Supprimer</a></li>
                          </ul>
                        </div>
                        </td>
                      </tr>
					{% endfor %}
                    </tbody>
                    </table>
                    </div>
                </div><!-- /.box-body -->
              </div>
		
	</section>
{% endblock spread_admin_content %}
{% block javascripts %}
	{% javascripts 'plugins/datatables/jquery.dataTables.js''plugins/datatables/dataTables.bootstrap.js''plugins/slimScroll/jquery.slimscroll.min.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
{% endblock %}